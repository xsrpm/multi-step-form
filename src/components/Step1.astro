<section
  id="step1"
  x-show="step === 1"
>
  <div class="bg-white py-7 lg:pt-10 lg:pb-0 px-6  lg:px-24 mx-5 lg:mx-0 rounded-md shadow-lg lg:shadow-none relative -top-[10.50vh] min-h-[300px] overflow-y-auto lg:top-0">
    <h1 class="text-2xl lg:text-3xl font-bold text-marine-blue">Personal info</h1>
    <p class="text-cool-gray mt-3 mb-5 lg:mb-10 font-semibold">
      Please provide your name, email address, and phone number.
    </p>
    <div class="mb-3 lg:mb-6 relative">
      <label
        for="name"
        style="display:block"
        class="text-marine-blue font-bold text-xs lg:text-base pb-1 lg:pb-3">Name</label
      >
      <input
        id="name"
        type="text"
        placeholder="e.g. Stephen King"
        class="px-4 pb-2 pt-1 w-full lg:h-12 rounded border-2 placeholder:font-semibold"
        x-model="name"
      />
      <p class="absolute top-0 right-0 text-strawberry-red font-bold text-xs lg:text-base" x-bind:class="name === '' ? 'block': 'hidden' ">This field is required</p>
    </div>
    <div class="mb-3 lg:mb-6 relative">
      <label
        for="email"
        style="display:block"
        class="text-marine-blue font-bold text-xs lg:text-base pb-1 lg:pb-3">Email Address</label
      >
      <input
        id="email"
        type="email"
        placeholder="e.g. stephenking@lorem.com"
        class="px-4 pb-2 pt-1 w-full lg:h-12 rounded border-2 placeholder:font-semibold"
        x-model="email"
      />
      <p class="absolute top-0 right-0 text-strawberry-red font-bold text-xs lg:text-base" x-bind:class="email === '' ? 'block': 'hidden' ">This field is required</p>
    </div>
    <div class="relative">
      <label
        for="phone-number"
        style="display:block"
        class="text-marine-blue font-bold text-xs lg:text-base pb-1 lg:pb-3">Phone Number</label
      >
      <input
        id="phone-number"
        type="number"
        placeholder="e.g. +1 234 567 890"
        class="px-4 pb-2 pt-1 w-full lg:h-12 rounded border-2 placeholder:font-semibold"
        x-model="phone"
      />
      <p class="absolute top-0 right-0 text-strawberry-red font-bold text-xs lg:text-base" x-bind:class="phone === '' ? 'block': 'hidden' ">This field is required</p>
    </div>
  </div>
</section>
