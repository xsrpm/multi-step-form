<section
  id="step1"
  x-show="step === 1"
>
  <div class="bg-white py-7 px-6 mx-5 rounded-md shadow-lg relative -top-[10.50vh] min-h-[300px] overflow-y-auto">
    <h1 class="text-2xl font-bold text-marine-blue">Personal info</h1>
    <p class="text-cool-gray mt-3 mb-5 font-semibold">
      Please provide your name, email address, and phone number.
    </p>
    <div class="mb-3">
      <label
        for="name"
        style="display:block"
        class="text-marine-blue font-bold text-xs pb-1">Name</label
      >
      <input
        id="name"
        type="text"
        placeholder="e.g. Stephen King"
        class="px-4 pb-2 pt-1 w-full rounded border-2 placeholder:font-semibold"
        x-model="name"
      />
    </div>
    <div class="mb-3">
      <label
        for="email"
        style="display:block"
        class="text-marine-blue font-bold text-xs pb-1">Email Address</label
      >
      <input
        id="email"
        type="email"
        placeholder="e.g. stephenking@lorem.com"
        class="px-4 pb-2 pt-1 w-full rounded border-2 placeholder:font-semibold"
        x-model="email"
      />
    </div>
    <div>
      <label
        for="phone-number"
        style="display:block"
        class="text-marine-blue font-bold text-xs pb-1">Phone Number</label
      >
      <input
        id="phone-number"
        type="number"
        placeholder="e.g. +1 234 567 890"
        class="px-4 pb-2 pt-1 w-full rounded border-2 placeholder:font-semibold"
        x-model="phone"
      />
    </div>
  </div>
</section>
